<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="application">
  <jobTemplates>
    <jobTemplate id="snap">
      <streamingExecutable>/application/snap/run</streamingExecutable>
      <defaultParameters>
        <parameter id="selectedPolarisations" title="Upsampling method" abstract="Upsampling method" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <option>VV</option>
            <option>VH</option>
            <default>VV</default>
          </options>
        </parameter>
        <parameter id="geoRegion" title="Downsampling method" abstract="Downsampling method" maxOccurs="1" scope="runtime" type="LiteralData">POLYGON((14.702 37.584, 15.353 37.584, 15.353 37.953, 14.702 37.953, 14.702 37.584))</parameter>
        <parameter id="demResamplingMethod" title="Flag downsampling method" abstract="Flag downsampling method" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <option>NEAREST_NEIGHBOUR</option>
            <option>FlagAnd</option>
            <option>FlagOr</option>
            <option>FlagMedianOr</option>
            <option>FlagMedianAnd</option>
            <default>NEAREST_NEIGHBOUR</default>
          </options>
        </parameter>
        <parameter id="imgResamplingMethod" title="Resample on pyramid levels (for faster imaging)" abstract="Resample on pyramid levels (for faster imaging)" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <option>NEAREST_NEIGHBOUR</option>
            <option>false</option>
            <default>NEAREST_NEIGHBOUR</default>
          </options>
        </parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">9900000000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="workflow" title="SNAP application" abstract="SNAP application">
    <workflowVersion>1.0</workflowVersion>
    <node id="snap">
      <job id="snap"/>
      <sources>
        <source id="source" title="Sentinel-2 references" abstract="List of Sentinel-2 references" refid="string:list" scope="runtime">https://catalog.terradue.com//e-learning/search?uid=S1A_IW_GRDH_1SDV_20161114T165602_20161114T165627_013941_016729_59B8</source>
      </sources>
    </node>
  </workflow>
</application>
